<odoo>
    <record id="view_library_book_list" model="ir.ui.view">
        <field name="name">library.book.list</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" string="Назва"/>
                <field name="author" string="Автор"/>
                <field name="published_date" string="Дата публікації"/>
                <field name="is_available" string="Доступна"/>
            </list>
        </field>
    </record>

    <record id="view_library_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_open_rent_wizard"
                            type="object"
                            string="Видати книгу"
                            class="btn-primary"
                            invisible="not is_available"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" string="Назва"/>
                        <field name="author" string="Автор"/>
                        <field name="published_date" string="Дата публікації"/>
                        <field name="is_available" string="Доступна" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_library_book" model="ir.actions.act_window">
        <field name="name">Книги</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
