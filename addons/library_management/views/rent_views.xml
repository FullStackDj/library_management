<odoo>
    <record id="view_library_rent_list" model="ir.ui.view">
        <field name="name">library.rent.list</field>
        <field name="model">library.rent</field>
        <field name="arch" type="xml">
            <list>
                <field name="partner_id" string="Користувач"/>
                <field name="book_id" string="Книга"/>
                <field name="rent_date" string="Дата видачі"/>
                <field name="return_date" string="Дата повернення"/>
            </list>
        </field>
    </record>

    <record id="view_library_rent_form" model="ir.ui.view">
        <field name="name">library.rent.form</field>
        <field name="model">library.rent</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="partner_id" string="Користувач"/>
                        <field name="book_id" string="Книга"/>
                        <field name="rent_date" string="Дата видачі" readonly="1"/>
                        <field name="return_date" string="Дата повернення"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_library_rent" model="ir.actions.act_window">
        <field name="name">Видачі</field>
        <field name="res_model">library.rent</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
